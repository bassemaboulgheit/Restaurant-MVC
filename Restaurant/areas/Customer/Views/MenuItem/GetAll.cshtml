@using Applications.DTos.ItemDTOs
@model List<ItemsDto>
@{
    ViewData["Title"] = "Menu Items";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary fw-bold">Our Menu</h1>
        <p class="lead text-muted">Discover our delicious items</p>
    </div>

    <!-- Items Grid -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <!-- Image -->
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name"
                                 style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center"
                                 style="height: 250px;">
                                <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                            </div>
                        }

                        <!-- Stock Badge -->
                        <span class="position-absolute top-0 end-0 m-3 badge @(item.Quantity > 0 ? "bg-success" : "bg-danger")">
                            @(item.Quantity > 0 ? "In Stock" : "Out of Stock")
                        </span>

                        <!-- Category Badge -->
                        <span class="position-absolute top-0 start-0 m-3 badge bg-primary">
                            @item.Category?.Name
                        </span>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">@item.Name</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @(item.Description?.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)
                        </p>

                        <!-- Price -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-success mb-0 fw-bold">
                                @item.Price.ToString("C")
                            </h4>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2">
                            @if (item.Quantity > 0)
                            {
                                @if (isAuthenticated)
                                {
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="menuItemId" value="@item.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <a asp-area="Identity" asp-controller="Account" asp-action="Login"
                                       asp-route-returnUrl="@Context.Request.Path"
                                       class="btn btn-primary">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Add to Order
                                    </a>
                                }
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled>
                                    <i class="bi bi-x-circle me-2"></i>Out of Stock
                                </button>
                            }
                            <a asp-controller="MenuItem" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                <i class="bi bi-info-circle me-2"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
            <h3 class="text-muted mt-3">No items available</h3>
            <p class="text-muted">Check back later for new menu items</p>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

    .card-img-top {
        transition: transform 0.3s ease;
    }

    .hover-card:hover .card-img-top {
        transform: scale(1.05);
    }
</style>