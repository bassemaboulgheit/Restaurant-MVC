@using Applications.DTos.OrderDTOs
@using Applications.DTos.OrderItemsDTOs
@model OrderDto

@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Order Confirmed!</h4>
                <p>Thank you for your order.</p>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Order #@Model.Id</h5>
                </div>
                <div class="card-body">
                    <h6>Customer Information</h6>
                    <p><strong>Name:</strong> @Model.CustomerName</p>
                    <p><strong>Phone:</strong> @Model.CustomerPhone</p>
                    <p><strong>Email:</strong> @Model.CustomerEmail</p>
                    <p><strong>Order Type:</strong> @Model.OrderType</p>

                    <h6 class="mt-4">Order Items</h6>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Qty</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems ?? new List<OrderItemsDto>())
                            {
                                <tr>
                                    <td>@item.MenuItem?.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>$@item.UnitPrice.ToString("F2")</td>
                                    <td>$@item.Subtotal.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="mt-3">
                        <p><strong>Subtotal:</strong> $@Model.Subtotal.ToString("F2")</p>
                        @if (Model.DiscountAmount > 0)
                        {
                            <p><strong>Discount:</strong> -$@Model.DiscountAmount.ToString("F2")</p>
                        }
                        <p><strong>Tax:</strong> $@Model.TaxAmount.ToString("F2")</p>
                        <h5><strong>Total:</strong> $@Model.TotalAmount.ToString("F2")</h5>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("MyOrders", "Order", new { area = "Customer" })" class="btn btn-primary">My Orders</a>
                <a href="@Url.Action("GetAll", "MenuItem", new { area = "Customer" })" class="btn btn-secondary">Menu</a>
            </div>
        </div>
    </div>
</div>