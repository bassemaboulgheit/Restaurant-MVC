@{
    ViewData["Title"] = "Welcome to MazaQ Restaurant";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="mb-4">
        <i class="bi bi-egg-fried display-1 text-warning shadow-sm"></i>
    </div>

    <h1 class="display-4 fw-bold text-dark">
        Welcome to <span class="text-gradient">MazaQ Restaurant</span>
    </h1>
    <p class="lead text-muted mt-3">
        🍽️ Discover flavors crafted with love, tradition, and the freshest ingredients.
    </p>

    <div class="mt-4 d-flex justify-content-center gap-3 flex-wrap">
        <a href="@Url.Action("GetAll", "MenuItem", new { area = "Customer" })" class="btn btn-lg btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-list"></i> View Menu
        </a>
        @* <a href="@Url.Action("Contact", "Home", new { area = "Customer" })" class="btn btn-lg btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-telephone"></i> Contact Us
        </a> *@
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #fff8f0, #ffe5e0);
        font-family: 'Segoe UI', sans-serif;
    }

    .text-gradient {
        background: linear-gradient(to right, #ff6f61, #ff4c3b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-primary {
        background-color: #ff6f61;
        border-color: #ff6f61;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #ff4c3b;
            border-color: #ff4c3b;
            transform: scale(1.05);
        }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
            transform: scale(1.05);
        }

    .shadow-sm {
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
</style>


