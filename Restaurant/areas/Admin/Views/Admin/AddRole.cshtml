@using Applications.DTos.AdminDTOs
@model RoleDto
@{
    ViewData["Title"] = "Add Role";
	Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h1 class="mb-4">Add New Role</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddRole" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="roleName" class="control-label fw-bold"></label>
                <input asp-for="roleName" class="form-control" placeholder="Enter role name..." />
                <span asp-validation-for="roleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="GetAllRoles" class="btn btn-secondary ms-2">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
