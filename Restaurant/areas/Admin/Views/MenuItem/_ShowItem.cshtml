@model ItemsDto
@{
    ViewData["Title"] = "Item Details";
	Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    :root {
        --primary-color: #667eea;
        --secondary-color: #764ba2;
        --success-color: #10b981;
        --danger-color: #ef4444;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .details-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    .back-button {
        background: white;
        color: var(--primary-color);
        border: none;
        padding: 12px 25px;
        border-radius: 25px;
        font-weight: 600;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        text-decoration: none !important;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .back-button:hover {
        transform: translateX(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        color: var(--primary-color);
    }

    .details-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        animation: slideUp 0.5s ease;
    }

    .card-header-custom {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 30px;
        text-align: center;
    }

    .card-header-custom h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .card-body-custom {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0;
    }

    .image-section {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        position: relative;
    }

    .item-image-large {
        max-width: 100%;
        max-height: 400px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        object-fit: cover;
    }

    .no-image-large {
        font-size: 8rem;
        color: white;
        opacity: 0.8;
    }

    .stock-badge-large {
        position: absolute;
        top: 30px;
        right: 30px;
        padding: 12px 24px;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1rem;
        backdrop-filter: blur(10px);
        color: white;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .stock-badge-large.in-stock {
        background: rgba(16, 185, 129, 0.9);
    }

    .stock-badge-large.out-of-stock {
        background: rgba(239, 68, 68, 0.9);
    }

    .info-section {
        padding: 40px;
    }

    .info-row {
        padding: 20px 0;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .info-content {
        flex: 1;
    }

    .info-label {
        font-size: 0.85rem;
        color: #9ca3af;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 5px;
    }

    .info-value {
        font-size: 1.2rem;
        color: #1f2937;
        font-weight: 600;
    }

    .info-value.price {
        color: var(--primary-color);
        font-size: 1.8rem;
        font-weight: 700;
    }

    .info-value.description {
        font-size: 1rem;
        color: #6b7280;
        font-weight: normal;
        line-height: 1.6;
    }

    .category-badge {
        display: inline-block;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 1rem;
    }

    .quantity-display {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: #f3f4f6;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 1.1rem;
        color: #1f2937;
    }

    .card-footer-custom {
        padding: 30px 40px;
        background: #f9fafb;
        display: flex;
        gap: 15px;
        justify-content: center;
    }

    .action-button {
        padding: 14px 30px;
        border-radius: 25px;
        border: none;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none !important;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-edit-custom {
        background: #fbbf24;
        color: white;
    }

    .btn-edit-custom:hover {
        background: #f59e0b;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(251, 191, 36, 0.4);
        color: white;
    }

    .btn-delete-custom {
        background: var(--danger-color);
        color: white;
    }

    .btn-delete-custom:hover {
        background: #dc2626;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(239, 68, 68, 0.4);
        color: white;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .card-body-custom {
            grid-template-columns: 1fr;
        }

        .image-section {
            min-height: 300px;
        }

        .card-header-custom h1 {
            font-size: 1.8rem;
        }

        .card-footer-custom {
            flex-direction: column;
        }

        .action-button {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="details-container">
    <!-- Back Button -->
    <a asp-action="GetAll" class="back-button">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>

    <!-- Details Card -->
    <div class="details-card">
        <!-- Card Header -->
        <div class="card-header-custom">
            <h1>@Model.Name</h1>
        </div>

        <!-- Card Body -->
        <div class="card-body-custom">
            <!-- Image Section -->
            <div class="image-section">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="item-image-large" />
                }
                else
                {
                    <div class="no-image-large">🍽️</div>
                }

                <!-- Stock Badge -->
                <span class="stock-badge-large @(Model.Quantity > 0 ? "in-stock" : "out-of-stock")">
                    @if (Model.Quantity > 0)
                    {
                        <i class="bi bi-check-circle-fill"></i>
                        <span>In Stock</span>
                    }
                    else
                    {
                        <i class="bi bi-x-circle-fill"></i>
                        <span>Out of Stock</span>
                    }
                </span>
            </div>

            <!-- Info Section -->
            <div class="info-section">
                <!-- Price -->
                <div class="info-row">
                    <div class="info-icon">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Price</div>
                        <div class="info-value price">@Model.Price.ToString("F2") EGP</div>
                    </div>
                </div>

                <!-- Category -->
                <div class="info-row">
                    <div class="info-icon">
                        <i class="bi bi-tag-fill"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Category</div>
                        <div class="info-value">
                            <span class="category-badge">@(Model.Category?.Name ?? "Unknown")</span>
                        </div>
                    </div>
                </div>

                <!-- Quantity -->
                <div class="info-row">
                    <div class="info-icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Available Quantity</div>
                        <div class="info-value">
                            <span class="quantity-display">
                                <i class="bi bi-boxes"></i>
                                @Model.Quantity Units
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="info-row">
                    <div class="info-icon">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Description</div>
                        <div class="info-value description">
                            @(string.IsNullOrEmpty(Model.Description) ? "No description available" : Model.Description)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Footer -->
        <div class="card-footer-custom">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="action-button btn-edit-custom">
                <i class="bi bi-pencil-fill"></i> Edit Item
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" 
               class="action-button btn-delete-custom"
               onclick="return confirm('Are you sure you want to delete @Model.Name?');">
                <i class="bi bi-trash-fill"></i> Delete Item
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add animation on load
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.details-card');
            card.style.animation = 'slideUp 0.5s ease';
        });
    </script>
}