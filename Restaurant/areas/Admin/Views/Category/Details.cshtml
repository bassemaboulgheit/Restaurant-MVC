@using Applications.DTos.CategoryDTOs
@model CategoryDto
@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<style>
    .details-container {
        max-width: 700px;
        margin: 40px auto;
    }

    .page-title {
        text-align: center;
        margin-bottom: 35px;
    }

        .page-title h2 {
            font-size: 28px;
            font-weight: 700;
            color: #333;
            margin-bottom: 8px;
        }

        .page-title p {
            color: #666;
            font-size: 14px;
        }

    .details-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
        padding: 25px;
        color: white;
    }

        .card-header-custom h4 {
            margin: 0;
            font-size: 18px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .card-body-custom {
        padding: 30px;
    }

    .detail-group {
        margin-bottom: 28px;
        padding-bottom: 28px;
        border-bottom: 1px solid #f0f0f0;
    }

        .detail-group:last-of-type {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .detail-label {
        font-weight: 600;
        color: #2563eb;
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .detail-value {
        color: #333;
        font-size: 15px;
        line-height: 1.6;
        background: #f9f9f9;
        padding: 12px 15px;
        border-radius: 8px;
        border-left: 4px solid #2563eb;
    }

    .items-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .items-list li {
            background: white;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 14px 16px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s ease;
        }

            .items-list li:hover {
                border-color: #2563eb;
                background: #f9f9ff;
                transform: translateX(5px);
            }

            .items-list li:before {
                content: "✓";
                background: #2563eb;
                color: white;
                width: 24px;
                height: 24px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
                font-size: 12px;
                flex-shrink: 0;
            }

    .empty-message {
        background: #f0f4ff;
        border: 1px dashed #2563eb;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        color: #2563eb;
        font-style: italic;
    }

    .actions-footer {
        display: flex;
        gap: 12px;
        justify-content: center;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 1px solid #f0f0f0;
    }

    .btn-custom {
        padding: 11px 28px;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        flex: 1;
        justify-content: center;
    }

    .btn-back {
        background: #f0f0f0;
        color: #333;
    }

        .btn-back:hover {
            background: #e0e0e0;
            transform: translateY(-2px);
            color: #333;
            text-decoration: none;
        }

    .btn-edit {
        background: #2563eb;
        color: white;
    }

        .btn-edit:hover {
            background: #1d4ed8;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
        }

    .btn-delete {
        background: #dc2626;
        color: white;
    }

        .btn-delete:hover {
            background: #991b1b;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
        }

    .badge-count {
        background: #2563eb;
        color: white;
        border-radius: 20px;
        padding: 4px 12px;
        font-size: 12px;
        font-weight: 600;
    }

    @@media (max-width: 576px) {
        .details-container {
            margin: 20px 15px;
        }

        .card-body-custom {
            padding: 20px;
        }

        .page-title h2 {
            font-size: 22px;
        }

        .actions-footer {
            flex-direction: column;
        }

        .btn-custom {
            flex: 1 !important;
        }
    }
</style>

<div class="details-container">
    <!-- Page Title -->
    <div class="page-title">
        <h2>
            <i class="bi bi-info-circle"></i> Category Details
        </h2>
        <p>View complete information about this category</p>
    </div>

    <!-- Details Card -->
    <div class="details-card">
        <!-- Header -->
        <div class="card-header-custom">
            <h4>
                <i class="bi bi-tag"></i> @Model.Name
            </h4>
        </div>

        <!-- Body -->
        <div class="card-body-custom">
            <!-- Category Name -->
            <div class="detail-group">
                <div class="detail-label">
                    <i class="bi bi-tag-fill"></i> Category Name
                </div>
                <div class="detail-value">
                    @Model.Name
                </div>
            </div>

            <!-- Description -->
            <div class="detail-group">
                <div class="detail-label">
                    <i class="bi bi-file-text-fill"></i> Description
                </div>
                <div class="detail-value">
                    @(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "No description provided")
                </div>
            </div>

            <!-- Menu Items -->
            <div class="detail-group">
                <div class="detail-label">
                    <i class="bi bi-list-ul"></i> Menu Items
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <span class="badge-count">@Model.Items.Count()</span>
                    }
                </div>

                @if (Model.Items != null && Model.Items.Any())
                {
                    <ul class="items-list">
                        @foreach (var item in Model.Items)
                        {
                            <li>@item.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <div class="empty-message">
                        <i class="bi bi-inbox" style="font-size: 24px; display: block; margin-bottom: 8px;"></i>
                        No menu items found for this category
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="actions-footer">
                <a asp-area="Admin" asp-controller="Category" asp-action="GetAll" class="btn-custom btn-back">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id" class="btn-custom btn-edit">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id" class="btn-custom btn-delete"
                   onclick="return confirm('Are you sure you want to delete this category? This action cannot be undone.')">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
    </div>
</div>