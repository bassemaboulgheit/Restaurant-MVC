@model CategoryDto

@{
    ViewData["Title"] = "Category Details";
	Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Category Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label fw-bold">Category Name:</label>
                <input class="form-control" value="@Model.Name" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Description:</label>
                <input class="form-control" value="@Model.Description" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Menu Items:</label>
                @if (Model.Items != null && Model.Items.Any())
                {
                    <ul class="list-group">
                        @foreach (var item in Model.Items)
                        {
                            <li class="list-group-item">@item.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted fst-italic">No menu items found for this category.</p>
                }
            </div>

            <div class="text-center mt-4">
                @* <a  asp-action="GetAll" class="btn btn-secondary px-4">Back to List</a> *@
                <a asp-area="Admin" asp-controller="MenuItem" asp-action="GetAll" class="btn btn-secondary px-4">Back to List</a>
            </div>
        </div>
    </div>
</div>
