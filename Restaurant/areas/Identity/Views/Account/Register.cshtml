@model RegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; // عدل المسار لو بتستخدم Areas
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 450px;">
        <h3 class="text-center mb-4 text-primary fw-bold">Create Account</h3>

        <form asp-action="Register" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Username -->
            <div class="form-floating mb-3">
                <input asp-for="userName" class="form-control" placeholder="Enter username" />
                <label asp-for="userName"></label>
                <span asp-validation-for="userName" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Address -->
            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" placeholder="Enter address" />
                <label asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-4">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Register Button -->
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg rounded-3">
                    <i class="bi bi-person-plus me-2"></i> Register
                </button>
            </div>

            <!-- Login Link -->
            <div class="text-center">
                <a asp-action="Login" asp-controller="Account" class="text-decoration-none">
                    <i class="bi bi-box-arrow-in-right"></i> Already have an account? Login
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
